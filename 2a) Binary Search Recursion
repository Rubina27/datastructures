#include <stdio.h>
#include <stdlib.h>

int binarysearch(int a[], int low, int high, int key)
{
	int mid = (low+high)/2;

	if(low > high)
		return 0;

	//printf("Works\n");

	if(key == a[mid])
	{
		return mid + 1;
	}

	else if(key > a[mid])
	{
		binarysearch(a,mid+1,high,key);
	}
	else
		binarysearch(a,low,mid-1,key);
	return 0;

}

int main()
{

	int key,n,i;
	int a[20];

	printf("Enter the size of the array: \n");
	scanf("%d",&n);

	printf("Enter the elements in ascending order: \n");

	for(i=0; i<n; i++)
	{
		scanf("%d",&a[i]);
	}

	printf("Enter the key to be searched for: \n");
	scanf("%d",&key);

	int flag = binarysearch(a,0,n-1,key);

	if(flag)
	{
		printf("Element found at position %d\n",flag );
	}
	else
		printf("Element not found.\n");

}
